{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "preserve",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["./src/types.d.ts", "node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": false,
    "stripInternal": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
